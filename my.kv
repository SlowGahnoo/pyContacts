#: import main pycon
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import sla kivy.adapters.simplelistadapter
#:import label kivy.uix.label


ScreenManager:
  id: screen_manager
  MenuScreen:
    id: 'Menu'
    name: 'Menu'
    manager:'screen_manager'
  AddContactScreen:
    id:'AddContact'
    name:'AddContact'
    manager:'screen_manager'
  SettingsScreen:
    id: 'Settings'
    name: 'Settings'
    manager:'screen_manager'
  AboutScreen:
    id: 'About'
    name: 'About'
    manager:'screen_manager'

<TopBar>:
  BoxLayout:
    size: root.size
    ActionBar:   
      pos_hint:{'top':1} 
      ActionView: 
        ActionPrevious:
          title:"pyContacts"
          with_previous: False
          on_release: app.root.current='About'
        ActionButton:
          text:"Settings"
          on_release: app.root.current='Settings'
<ReturnBar>:
  BoxLayout:
    size: root.size
    ActionBar:   
      pos_hint:{'top':1} 
      ActionView: 
        ActionPrevious:
          title:"Back"
          on_release: app.root.current='Menu'

<MenuScreen>:
  TopBar:
  ContactList:
      

<ContactList>:
  BoxLayout:
    orientation: 'vertical'
    height: root.height-50
    width: root.width
    contact_list: contacts_list_view
    ListView:
      id: contacts_list_view
      adapter:
        sla.SimpleListAdapter(
        data=["Item #{0}".format(i) for i in range(100)],
        cls=label.Label)

    
    
  Button:
    height: 80
    width: root.width
    text: 'Add Contact'
    on_release: app.root.current='AddContact'

<AddContactScreen>:
  first_name_text_input: first_name
  last_name_text_input: last_name
  ReturnBar:
  BoxLayout:
    padding: 50
    width:root.width
    height: 1  
    orientation:"vertical"
    Label:
      text: 'First Name'
    TextInput:
      id: first_name
      multiline: False
    Label:
      text: 'Last Name'
    TextInput:
      id:last_name
      multiline: False
    Label:
      text: 'Mobile Number'
    TextInput:
      id: mobile_number
      multiline: False
    Label:
      text: 'Home Number'
    TextInput:
      id: home_number
      multiline: False
    Label:  
      text: 'Office Number'
    TextInput:
      id: office_number
      multiline: False
    Label:
    Button:
      text: 'Add Contact'
      on_release: root.add_contact()





<SettingsScreen>:
  ReturnBar:
    
    BoxLayout:
      width: root.width
      orientation:"vertical"
      spacing: 5
      padding: 5
      Button:
        text:"Button1"


<AboutScreen>:
  BoxLayout:
    size:root.size
    orientation:"vertical"
    Label:
      text:" pyContacts\nversion 0.04"
    Button:
      text:"return"
      on_release: app.root.current='Menu'
