#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


ScreenManager:
  id: screen_manager
  MenuScreen:
    id: 'Menu'
    name: 'Menu'
    manager:'screen_manager'
  AddContactScreen:
    id:'AddContact'
    name:'AddContact'
    manager:'screen_manager'
  SettingsScreen:
    id: 'Settings'
    name: 'Settings'
    manager:'screen_manager'
  AboutScreen:
    id: 'About'
    name: 'About'
    manager:'screen_manager'

<TopBar>:
  BoxLayout:
    size: root.size
    ActionBar:   
      pos_hint:{'top':1} 
      ActionView: 
        ActionPrevious:
          title:"pyContacts"
          with_previous: False
          on_release: app.root.current='About'
        ActionButton:
          text:"Settings"
          on_release: app.root.current='Settings'
<ReturnBar>:
  BoxLayout:
    size: root.size
    ActionBar:   
      pos_hint:{'top':1} 
      ActionView: 
        ActionPrevious:
          title:"Back"
          on_release: app.root.current='Menu'

<MenuScreen>:
  TopBar:
  ContactList:
      

<ContactList>:
  Button:
    text: 'Add Contact'
    on_release: app.root.current='AddContact'

<AddContactScreen>:
  ReturnBar:
  BoxLayout:
    padding: 50
    width:root.width
    height: 1  
    orientation:"vertical"
    Label:
      text: 'Name'
    TextInput:
      multiline: False
    Label:
      text: 'Surname'
    TextInput:
      multiline: False
    Label:
      text: 'Mobile Number'
    TextInput:
      multiline: False
    Label:
      text: 'Home Number'
    TextInput:
      multiline: False
    Label:  
      text: 'Office Number'
    TextInput:
      multiline: False
    Label:
    Button:
      text: 'Add Contact'



<SettingsScreen>:
  ReturnBar:
    
    BoxLayout:
      width: root.width
      orientation:"vertical"
      spacing: 5
      padding: 5
      Button:
        text:"Button1"
<AboutScreen>:
  BoxLayout:
    size:root.size
    orientation:"vertical"
    Label:
      text:" pyContacts\nversion 0.03"
    Button:
      text:"return"
      on_release: app.root.current='Menu'
