#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


ScreenManager:
  id: screen_manager
  MenuScreen:
    id: 'Menu'
    name: 'Menu'
    manager:'screen_manager'
  SettingsScreen:
    id: 'Settings'
    name: 'Settings'
    manager:'screen_manager'
  AboutScreen:
    id: 'About'
    name: 'About'
    manager:'screen_manager'


<MenuScreen>:
  BoxLayout:
    size:root.size
    orientation:"vertical"
    ActionBar:
      ActionView:
        ActionPrevious:
          title:"pyContacts"
          on_press: app.root.current='About'
        ActionButton:
          text:"Settings"
          on_press: app.root.current='Settings'
    
    ContactList:
      

<ContactList>:
  GridLayout: 
    size:root.size
    cols: 2
    spacing: 5
    padding: 5
    Button:
      text:"Contact1"
    Button:
      text:"Contact2"
    Button:
      text:"Contact3"
    Button:
      text:"Contact4"
    Button:
      text:"Contact5"
    Button:
      text:"Contact6"


<SettingsScreen>:
  BoxLayout:
    size:root.size
    orientation:"vertical"
    Button:
      text:"Button1"
      on_press: app.root.current='Menu'

<AboutScreen>:
  BoxLayout:
    size:root.size
    orientation:"vertical"
    Label:
      text:"pyContacts\nversion 0.02"
    Button:
      text:"return"
      on_press: app.root.current='Menu'
