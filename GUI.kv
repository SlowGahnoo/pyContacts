# -*- coding: utf-8 -*-
<MainScreen>:

<InitialScreen>:
  orientation:'vertical'
  Label:
    size_hint_y:0.7
    font_size:'30sp'
    markup: True
    text: 'Welcome to py[b][color=2B5EB2]Contacts[/color][/b]'
  Button:
    size_hint_y:0.1
    text: 'Touch here to continue'
    on_release: root.create_database()
  BoxLayout:
    size_hint_y:0.2

<ContactScreen>:
  BoxLayout:
    orientation:'vertical'
    ActionBar:
      ActionView:
        ActionPrevious:
          with_previous: False
          title:'pyContacts'
          on_release: root.AboutPopup()
    ScrollView:
      size:self.size
      GridLayout:
        id: container
        padding: [10,10,10,10]
        spacing: 5
        size_hint_y: None
        cols: 1
        row_default_height: root.height*0.2
        height: self.minimum_height
    BoxLayout:
      id:button_bar
      size_hint_y:0.1

<DataWidget>:
  data: ''
  data_id1: ''
  data_id2: ''
  canvas:
    Color:
      rgb:0.2,0.2,0.2
    Rectangle:
      size:self.size
      pos:self.pos
  Label:
    size_hint_x:0.9
    text: root.data
  Button:
    size_hint_x:0.1
    text:'edit'
    on_release: root.edit_data(root.data_id1,root.data_id2)

<AssignContactButton>:
  text:'+' 
  on_release: root.create_new_contact()

<AssignContactScreen>:
  orientation:'vertical'
  ActionBar:
    ActionView:
      ActionPrevious:
        title:'Add Contact'
        on_release:root.return_back()
  BoxLayout:
    orientation:'vertical'
    padding:50
    Label:
      text:'Name'
    TextInput:
      id:name_input
      multiline: False
    Label:
      text:'Surname'
    TextInput:
      id:surname_input
      multiline: False
    Label:
      text:'Phone Number 1'
    TextInput:
      id:num1_input
      multiline: False
      hint_text:'Must be filled in'
    Label:
      text:'Phone Number 2'
    TextInput:
      id:num2_input
      multiline: False
    Label:
      text:'Phone Number 3'
    TextInput:
      id:num3_input
      multiline: False
    BoxLayout:
      size_hint_y:5
    BoxLayout:
      Button:
        text:'Confirm'
        on_release: root.insert_data()
      Button:
        text:'Cancel'
        on_release: root.return_back()

<EditContactScreen>:
  data_id1:''
  data_id2:''
  orientation:'vertical'
  ActionBar:
    ActionView:
      ActionPrevious:
        title: 'Edit Contact'
        on_release:root.return_back()
  BoxLayout:
    orientation:'vertical'
    padding:50
    Label:
      text:'Name: '+root.data_id1
    Label:
      text:'Surname: '+root.data_id2
    BoxLayout:
      size_hint_y:1
    Label:
      text:'Phone Number 1'
    TextInput:
      id:num1_input
      multiline: False
      hint_text:'Must be filled in'
    Label:
      text:'Phone Number 2'
    TextInput:
      id:num2_input
      multiline: False
    Label:
      text:'Phone Number 3'
    TextInput:
      id:num3_input
      multiline: False
    BoxLayout:
      size_hint_y:5
    BoxLayout:
      Button:
        text:'Confirm'
        on_release: root.update_data()
      Button:
        text:'Delete'
        on_release: root.delete_data()
      Button:
        text:'Cancel'
        on_release: root.return_back()
   
<Message>:
  size_hint:0.8,0.8
  BoxLayout:
    orientation:'vertical'
    Label:
      size:self.size
      id: message
      text: ''
    Button:
      size_hint_y: 0.2
      text: 'Return'
      on_release: root.dismiss() 
