ScreenManagement:
  MainScreen:
    name:'Menu'
  AssignScreen:
    name:'AssignContact'

<Bar>:
  BoxLayout:
    size:root.size
    ActionBar:
      pos_hint:{'top':1}
      ActionView:
        ActionPrevious:
          title:'pyContacts'
          on_release: root.popup.open()

<MainScreen>:
  Bar:
    BoxLayout:
      orientation:'horizontal'
      height: 80
      width: root.width
      Button:
        text: 'Add Contact'
        on_release: app.root.current='AssignContact'
      Button:
        text: 'Remove Contact'
        on_release: app.root.current='AssignContact'
      Button:
        text: 'Edit Contact'
        on_release: app.root.current='AssignContact'

<AssignScreen>:
  Bar:
    BoxLayout:
      orientation:'vertical'
      height:root.height
      width:root.width
      padding: 50
      Label:
        text: 'First Name'
      TextInput:
        multiline: False
      Label:
        text: 'Last Name'
      TextInput:
        multiline: False
      Label:
        text: 'Mobile Number'
      TextInput:
        multiline: False
      Label:
        text: 'Hone Number'
      TextInput:
        multiline: False
      Label:
        text: 'Office Number'
      TextInput:
        multiline: False
      Label:
      Label:
    BoxLayout:
      width:root.width
      height: 80
      orientantion:'horizontal'
      Button:
        text:'Submit'
        on_release: app.root.current='Menu'
