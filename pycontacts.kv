ScreenManagement:
  MainScreen:
    name:'Menu'
  AssignScreen:
    name:'AssignContact'

<Bar>:
  BoxLayout:
    size:root.size
    ActionBar:
      pos_hint:{'top':1}
      ActionView:
        ActionPrevious:
          title:'pyContacts'
          on_release: root.popup.open()

<InitialWindow>:
  padding :20
  orientation: 'vertical'
  BoxLayout:
    size_hint_y:0.7
    Label:
      markup: True
      text:'[size=24]Welcome to[color=3333ff] [b]pyContacts[/b][/color][/size]'
  Button:
    size_hint_y:0.1
    text: 'Touch here to continue'
    on_release: app.root.current='Menu'
    on_release: root.create_database()
  BoxLayout:
    size_hint_y:0.2

<MainScreen>:
  Bar:
    BoxLayout:
      orientation:'horizontal'
      height: 80
      width: root.width
      Button:
        text: '+'
        on_release: app.root.current='AssignContact'
      Button:
        text: 'Remove Contact'
        on_release: app.root.current='AssignContact'
      Button:
        text: 'Edit Contact'
        on_release: app.root.current='AssignContact'

<AssignScreen>:
  Bar:
    BoxLayout:
      orientation:'vertical'
      height:root.height
      width:root.width
      padding: 50
      Label:
        text: 'First Name'
      TextInput:
        multiline: False
      Label:
        text: 'Last Name'
      TextInput:
        multiline: False
      Label:
        text: 'Phone Number 1'
      TextInput:
        multiline: False
      Label:
        text: 'Phone Number 2'
      TextInput:
        multiline: False
      Label:
        text: 'Phone Number 3'
      TextInput:
        multiline: False
      Label:
      Label:
    BoxLayout:
      width:root.width
      height: 80
      orientantion:'horizontal'
      Button:
        text:'Submit'
        on_release: app.root.current='Menu'

